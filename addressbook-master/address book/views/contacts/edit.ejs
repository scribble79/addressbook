<h2>Edit Contact</h2>
<form method="post" action="/contacts/<%= contact.id %>">
  <input type="hidden" name="_method" value="put">

  <label for="contact_name">Name</label>
  <input type="text" name="contact[name]" id="contact_name" value="<%= contact.name %>">

  
  <label for="contact_phone_number">Phone Number</label>
  <input type="text" name="contact[phone_number]" id="contact_phone_number" value="<%= contact.phone_number %>">


  <label for="contact_address">Address</label>
  <textarea name="contact[address]" id="contact_adress"><%= contact.address %></textarea>

  <button>Edit</button>
</form>
